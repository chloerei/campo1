- content_for :head do
  = javascript_include_tag 'showdown', 'wmd'
  = stylesheet_link_tag 'wmd'

= render :partial => 'topics/subheader'

#reply-form.section
  .section-title
    %h2 New Reply
  .section-content
    .meta
      for
      = @topic.title
    .left-column.avatar
      = image_tag current_user.gravatar_url(:size => 48)
    .right-column
      = form_for @reply do |f|
        = render :partial => 'form', :object => f
        .field
          = f.submit 'Post', :class => 'button'
