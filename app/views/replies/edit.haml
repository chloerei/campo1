- content_for :head do
  = javascript_include_tag 'showdown', 'wmd'
  = stylesheet_link_tag 'wmd'

= render :partial => 'topics/subheader'

#reply-form.section
  .section-title
    %h2 Edit Reply
  .section-content
    .meta
      for
      = @topic.title
    .left-column.avatar
      = link_gravatar_to_person current_user
    .right-column
      = form_for @reply, :url => reply_url(@reply, :return_to => request.referer) do |f|
        = render :partial => 'form', :object => f
        .field
          = f.submit 'Post', :class => 'button'
