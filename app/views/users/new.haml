.section
  .section-title
    %h2= t :signup
  .section-content
    = form_for @user do |f|
      - if !@user.errors.blank?
        .error= @user.errors.full_messages
      %table.form-table
        %tr
          %th= f.label :username
          %td
            = f.text_field :username, :class => 'text'
            .meta= t 'tips.signup.username'
        %tr
          %th= f.label :email
          %td
            = f.text_field :email, :class => 'text'
            .meta= t 'tips.signup.email'
        %tr
          %th= f.label :password
          %td
            = f.password_field :password, :class => 'text'
            .meta= t 'tips.signup.password'
        %tr
          %th= f.label :password_confirmation
          %td
            = f.password_field :password_confirmation, :class => 'text'
        %tr
          %th
          %td= f.submit t(:signup), :class => 'button'
