!!! 5
%html
  %head
    %meta{ "charset" => "utf-8" }
    %title= @page_title
    = stylesheet_link_tag 'style'
    = yield :head
  %body
    #header
      .center-wraper
        #logo
          GEEKER
        #search
          %input{:type => :text}
          %input{:type => :submit, :value => 'Search'}
        = render :partial => 'layouts/top_menu'
        .clear
    #content
      .center-wraper
        #mainbar
          - if flash[:success]
            .success= flash[:success]
          - if flash[:error]
            .error= flash[:error]
          - if flash[:notice]
            .notice= flash[:notice]
          #subheader
            #mascot
              %img{:src => '/images/mascot.png'}
            #tabs
              %ul
                %li.current
                  Newest
                %li.tagged-interesting
                  %a{:href => '#'} Interesting
                %li.own-topic
                  %a{:href => '#'} Own
                %li.collect-topic
                  %a{:href => '#'} Collect
                %li
                  %a{:href => '#'} Week
                %li
                  %a{:href => '#'} Month
            .clear
          = yield
        #sidebar
          = yield :sidebar
        .clear
    #footer
      .center-wraper
        #bottom-menu
          %ul
            %li
              %a{:href => '#'} One
            %li
              %a{:href => '#'} Two
            %li.last 
              %a{:href => '#top'} Top
        #copyright
          @ Copyright YourWebSite | Layout by
          %a{:href => 'http://chloerei.com'} Rei
        .clear
