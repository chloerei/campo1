!!! 5
%html
  %head
    %meta{ "charset" => "utf-8" }
    %title= @page_title
    = stylesheet_link_tag 'style'
    = javascript_include_tag :defaults
    = yield :head
    = csrf_meta_tag
  %body
    #header
      .center-wraper
        #logo
          = APP_CONFIG['site_name']
        #search
          %input{:type => :text}
          %input{:type => :submit, :value => 'Search'}
        = render :partial => 'share/top_menu'
        .clear
    #content
      .center-wraper
        #mainbar
          - if flash[:success]
            .success= flash[:success]
          - if flash[:error]
            .error= flash[:error]
          - if flash[:notice]
            .notice= flash[:notice]
          = yield
        #sidebar
          = render :partial => 'share/sidebar_profile'
          = yield :sidebar
        .clear
    #footer
      .center-wraper
        #bottom-menu
          %ul
        #copyright
          @ Copyright
          = link_to APP_CONFIG['organize_name'], APP_CONFIG['organize_url']
          |
          Power by Campo
          / #TODO link to project page
        .clear
