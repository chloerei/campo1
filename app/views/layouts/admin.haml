!!! 5
%html
  %head
    %meta{ "charset" => "utf-8" }
    %title= page_title
    %link{:rel => "shortcut icon", :href => "/favicon.ico"}
    = stylesheet_link_tag 'admin'
    = javascript_include_tag :defaults
    = yield :head
    = csrf_meta_tag
  %body
    #header
      .center-wraper
        #logo
          = link_to APP_CONFIG['site_name'], root_path
        = render :partial => 'share/top_menu'
        .clear
    #content
      .content-box
        = yield
