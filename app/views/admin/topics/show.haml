= render :partial => 'admin/nav'

#topic
  = link_to topic_url(@topic), topic_url(@topic), :target => '_blank'
  %h3 Title
  = @topic.title
  %h3 Content
  = simple_format @topic.content
  %h3 Tags
  = @topic.tags_string
  %h3 Author
  = image_tag @topic.user.gravatar_url(:size => 48)
  = link_to @topic.user.profile.name, admin_user_url(@topic.user)
  %h3 Status
  = @topic.closed? ? 'closed' : 'open'

#manage
  .left
    - if @topic.closed?
      = button_to 'Open', open_admin_topic_url(@topic), :method => :post, :class => 'button'
    - else
      = button_to 'Close', close_admin_topic_url(@topic), :method => :post, :class => 'button'
  .right= button_to 'Delete', admin_topic_url(@topic), :method => :delete, :confirm => 'Sure?', :class => 'button'
  .clear
