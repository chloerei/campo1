= render :partial => 'admin/nav'

#replies
  %table.data-table
    - @replies.each do |reply|
      %tr{:class => cycle("even", "odd")}
        %td.title= link_to truncate(reply.content), admin_reply_url(reply)
        %td= @user_hash[reply.user_id].profile.name
        %td.time= l reply.created_at, :format => :short
  = paginate_for @replies
