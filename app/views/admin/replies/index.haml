= render :partial => 'admin/nav'

#replies
  %table.data-table
    - @replies.each do |reply|
      %tr{:class => cycle("even", "odd")}
        %td= link_to truncate(reply.content), admin_reply_path(reply)
        %td= link_to @user_hash[reply.user_id].profile.name, admin_user_path(@user_hash[reply.user_id])
        %td.time= l reply.created_at, :format => :short
  = paginate_for @replies
