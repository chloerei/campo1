- @page_title = t('.page_title', :name => @person.username)
- @page_title += t(".page_count", :page => params[:page]) if params[:page]

- content_for :head do
  = auto_discovery_link_tag :rss, person_topics_path(:username => @person.username, :format => 'rss')

#profile
  = render :partial => 'profile_head'
- if @topics.any?
  #topics.section
    .section-title
      %h2= t '.topics'
    .section-content
      = render :partial => 'topics/topic', :collection => @topics
      = paginate_for @topics
      .clear
      .right
        = image_tag 'rss.png', :class => 'icon'
        = link_to t('.subscription_recent_20_topics'), person_topics_path(:format => 'rss')
      .claer
