- content_for :head do
  = auto_discovery_link_tag :rss, person_topics_path(:username => @person.username, :format => 'rss')

#profile
  .avatar= link_gravatar_to_person @person, :size => 128
  .right-column
    %h1
      = link_to_person @person
  .clear

- if !@person.banned? and !@topics.empty?
  #topics.section
    .section-content
      = render :partial => 'topics'
      = paginate_for @topics
      .clear
  .section
    .section-content
      .right
        = image_tag 'rss.png', :class => 'icon'
        = link_to t('.subscription_recent_20_topics'), person_topics_path(:format => 'rss')
      .claer
