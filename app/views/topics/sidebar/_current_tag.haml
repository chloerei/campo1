#current-tag.section
  .section-title
    = t '.current_tag', :tag => @tag
  .section-content
    - if current_user.favorite_tags.to_a.include? @tag
      = button_to t('.remove_from_favorite_tags'), settings_favorite_tags_path(:tags => @tag, :return_to => tagged_topics_path(:tag => @tag)), :method => :delete, :class => 'button reverse'
    - else
      = button_to t('.add_to_favorite_tags'), settings_favorite_tags_path(:tags => @tag, :return_to => tagged_topics_path(:tag => @tag)), :method => :post, :class => 'button'
