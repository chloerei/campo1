- if current_logined?
  .section.favorite-tags
    .section-title
      Favorite Tags
    .section-content
      - if current_user.favorite_tags
        %ul
          - current_user.favorite_tags.each do |tag|
            %li= link_to tag, tagged_topics_url(:tag => tag), :class => 'button'
        .clear
      .actions= link_to 'manage tags', settings_favorite_tags_url
  - if @recent_tags
    .section.recent-tags
      .section-title
        Recent Tags
      .section-content
        %ul
          - @recent_tags.each do |tag, count|
            %li
              = link_to tag, tagged_topics_url(:tag => tag), :class => 'button'
              %span.meta
                x
                = count
        .clear
